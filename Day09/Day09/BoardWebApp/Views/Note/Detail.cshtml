
@model BoardWebApp.Models.Note
@{
	ViewData["Title"] = "상세보기";
}

<div class="container">
	<div class="row pt-4">
		<div class="col-10">
			<h2 class="text-primary">게시판보기</h2>
		</div>
		<div class="col text-end">
		</div>
	</div>
</div>
<div class="pt-4"></div>

<div class="container">
	<div class="row">
		<div class="col">
			<form>
				<div class="form-group mb-2">
					<div class="row">
						<div class="col-2">
							<label asp-for="Name" class="control-label"></label>
						</div>
						<div class="col">
							<input asp-for="Name" class="form-control" readonly="true" />
						</div>
					</div>
					
				</div>
				<div class="form-group mb-2">
					<div class="row">
						<div class="col-2">
							<label asp-for="PostDate" class="control-label"></label>
						</div>
						<div class="col">
							<input asp-for="PostDate" class="form-control" readonly="true" />
						</div>
					</div>

				</div>
				<div class="form-group mb-2">
					<div class="row">
						<div class="col-2">
							<label asp-for="Title" class="control-label"></label>
						</div>
						<div class="col">
							<input asp-for="Title" class="form-control" readonly="true" />
						</div>
					</div>

				</div>
				<div class="form-group mb-2">
					<div class="row">
						<div class="col-2">
							<label asp-for="Contents" class="control-label"></label>
						</div>
						<div class="col">
							@Html.Raw(@Model.Contents)
						</div>
					</div>

					
					
				</div>
				<br />
				<div class="form-group">
					@if (signInManager.IsSignedIn(User) && User.Identity.Name == Model.Name)
					{
						<a asp-controller="Note" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
							<i class="bi bi-pencil-square"></i>
							수정
						</a>
					}
					
					<a asp-controller="Note" asp-action="Index" class="btn btn-success btn-sm">
						<i class="bi bi-list-ol"></i>
						리스트
					</a>
				</div>
			</form>
		</div>
	</div>
</div>