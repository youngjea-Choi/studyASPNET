@model IEnumerable<BoardWedApp.Models.Note>
@{
    //ViewData["Title"] = "게시판";

}
@{
    var startPage = ViewBag.StartPage;
    var endPage = ViewBag.EndPage;
    var page = ViewBag.Page;
    var totalPage = ViewBag.TotalPage;
}

<partial name="_Notification" />


<div class="container">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-primary">게시판리스트</h2>
        </div>
        <div class="col text-end">
            <a asp-controller="Note" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-plus"></i>
                글생성
            </a>
        </div>
    </div>
</div>
<div class="pt-4"></div>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(@model => model.UserId)</th>
                            <th>@Html.DisplayNameFor(@model => model.Name)</th>
                            <th>@Html.DisplayNameFor(@model => model.Title)</th>
                            <th>@Html.DisplayNameFor(@model => model.ReadCount)</th>
                            <th>@Html.DisplayNameFor(@model => model.PostDate)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>
                                    <a asp-controller="Note" asp-action="Detail" asp-route-Id="@item.Id" class="text-decoration-none">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </a>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.ReadCount)</td>
                                <td>@Html.DisplayFor(modelItem => item.PostDate)</td>
                                <td>
                                    <a asp-controller="Note" , asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> 삭제</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <nav>
                <ul class="pagination justify-content-center">


                    @if (startPage > 1) // 11페이지로 넘어가면 나옴
                    {
                        <li class="page-item"><a class="page-link" href="?page=1">&laquo;</a></li>

                    }
                    else
                    {
                        <li class="page-item disabled"><a class="page-link" href="?page=1">&laquo;</a></li>
                        
                    }
                    @if (page > 1) // 바로 앞 페이지로 이동
                    {
                        <li class="page-item"><a class="page-link" href="?page=@(page-1)">&lt;</a></li>

                    }else
                    {
                        <li class="page-item disabled"><a class="page-link" href="?page=@(page-1)">&lt;</a></li>

                    }

                    @*반복하면서 페이지번호 출력*@
                    @for (int icount = startPage; icount <= endPage; icount++)
                    {
                        if (icount == page)
                        {
                            <li class="page-item active"><a class="page-link" href="?page=@icount" style="color: red; font-weight:bold;">@icount</a></li>

                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="?page=@icount">@icount</a></li>

                        }
                    }
                    @if (page < totalPage) //다음페이지로이동
                    {
                        <li class="page-item"><a class="page-link" href="?page=@(page+1)">&gt;</a></li>
                    }
                    else
                    {
                        <li class="page-item disabled"><a class="page-link" href="?page=@(page+1)">&gt;</a></li>

                    }
                    @if (endPage < totalPage) //마지막페이지로이동
                    {
                        <li class="page-item"><a class="page-link" href="?page=@(page+1)">&raquo;</a></li>
                    }
                    else
                    {
                        <li class="page-item disabled"  ><a class="page-link" href="?page=@(page+1)">&raquo;</a></li>

                    }
                </ul>
            </nav>
        </div>
    </div>
</div>